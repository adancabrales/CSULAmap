<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campusmap4"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/bluecircle" />

        <Button
            android:id="@+id/buttonBookStore"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/buttonEngineering"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp"
            android:onClick="sendMessageBookStore"
            android:visibility="visible" 
            android:background="@android:color/transparent"
            />

          <Button
              android:id="@+id/buttonBiologicalSciences"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:layout_above="@+id/buttonLaKretzHall"
              android:layout_toLeftOf="@+id/buttonBookStore"
              android:onClick="sendMessageBiologicalSciences"
              android:visibility="visible" 
              android:background="@android:color/transparent"
              />

          <Button
              android:id="@+id/buttonPhysicalSciences"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_below="@+id/buttonEngineering"
              android:layout_toLeftOf="@+id/buttonBiologicalSciences"
              android:background="@android:color/transparent"
              android:onClick="sendMessagePhysicalSciences"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonEngineering"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_alignTop="@+id/buttonAdministration"
              android:layout_marginLeft="52dp"
              android:layout_toRightOf="@+id/buttonBookStore"
              android:onClick="sendMessageEngineeringBuilding"
              android:background="@android:color/transparent"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonKingHall"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_alignBottom="@+id/buttonBookStore"
              android:layout_alignRight="@+id/buttonEngineering"
              android:background="@android:color/transparent"
              android:onClick="sendMessageKingHall"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonLuckMan"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_above="@+id/buttonKingHall"
              android:layout_marginBottom="36dp"
              android:layout_toRightOf="@+id/buttonBiologicalSciences"
              android:background="@android:color/transparent"
              android:onClick="sendMessageLuckManBuilding"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonLaKretzHall"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_alignLeft="@+id/buttonAdministration"
              android:layout_below="@+id/buttonPhysicalSciences"
              android:background="@android:color/transparent"
              android:onClick="sendMessageLaKretzHall"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonSimpsonHall"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_alignRight="@+id/buttonBiologicalSciences"
              android:layout_below="@+id/buttonLaKretzHall"
              android:layout_marginTop="31dp"
              android:background="@android:color/transparent"
              android:onClick="sendMessageSimpsonHall"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonAdministration"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/buttonBiologicalSciences"
              android:background="@android:color/transparent"
              android:onClick="sendMessageAdministrationBuildings"
              android:visibility="visible" />

          <Button
              android:id="@+id/buttonLibrary"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_alignBottom="@+id/buttonBookStore"
              android:layout_toRightOf="@+id/buttonLaKretzHall"
              android:background="@android:color/transparent"
              android:onClick="sendMessageLibraryBuilding"
              android:visibility="visible" />
          
</RelativeLayout>
