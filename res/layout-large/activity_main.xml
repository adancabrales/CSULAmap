<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campusmapbackground"
    tools:context="com.example.csulacampustour.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/buttonFindLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="161dp"
        android:background="@android:color/black"
        android:onClick="sendMessageFindLocation"
        android:text="Search For Location"
        android:textColor="#FFD700" />

</RelativeLayout>
